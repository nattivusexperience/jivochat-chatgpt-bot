{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KB JSONL Record",
  "type": "object",
  "required": ["id", "slug", "title", "language", "order", "content"],
  "properties": {
    "id": {"type": "string"},
    "slug": {"type": "string"},
    "title": {"type": "string"},
    "language": {"type": "string", "enum": ["es", "en", "fr", "de"]},
    "order": {"type": "integer", "minimum": 1},
    "brand": {"type": "string"},
    "company": {"type": "object"},
    "last_updated": {"type": "string"},
    "content": {"type": "string"}
  }
}